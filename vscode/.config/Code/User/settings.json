{
  // Editor settings
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.renderWhitespace": "all",
  "editor.smoothScrolling": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLens": true,
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.tabCompletion": "on",
  "editor.quickSuggestionsDelay": 200,
  "editor.suggestSelection": "recentlyUsed",
  "editor.linkedEditing": true,
  "editor.parameterHints.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineHints.enabled": "on",
  "editor.formatOnType": true,
  "editor.stickyTabStops": true,
  "editor.selectionHighlight": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.guides.indentation": true,
  "editor.folding": true,
  "editor.unicodeHighlight.allowedLocales": {
    "ja": true
  },
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.stickyScroll.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.lightbulb.enabled": "on",
  "editor.hover.enabled": true,
  "editor.scrollBeyondLastLine": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.renderControlCharacters": true,
  "editor.suggest.showSnippets": false,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.showIcons": true,
  "editor.minimap.renderCharacters": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.suggest.localityBonus": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.selectionMode": "always",
  "editor.snippetSuggestions": "top",
  "editor.suggestFontSize": 12,
  "editor.suggest.preview": true,
  "editor.suggest.showInlineDetails": true,
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "alt",
  "editor.formatOnPaste": false,
  "editor.formatOnSaveMode": "modifications",
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",
  "editor.autoSurround": "languageDefined",
  "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
  "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
  "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
  // Workbench settings
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "last",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.commandPalette.preserveInput": true,
  "workbench.activityBar.visible": true,
  "workbench.enableExperiments": true,
  "workbench.statusBar.visible": true,
  "workbench.list.smoothScrolling": true,
  "workbench.layoutControl.enabled": true,
  "workbench.commandPalette.history": 50,
  "window.openFoldersInNewWindow": "off",
  "window.zoomLevel": 0,
  "window.newWindowDimensions": "default",
  "window.restoreWindows": "all",
  // Files settings
  "files.watcherExclude": {
    "**/target/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": false,
  "files.restoreUndoStack": true,
  "files.defaultLanguage": "markdown",
  "terminal.integrated.defaultLocation": "view",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.DS_Store": true
  },
  // Explorer settings
  "explorer.confirmDelete": true,
  "explorer.compactFolders": true,
  "explorer.confirmDragAndDrop": true,
  // Search settings
  "search.followSymlinks": true,
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/coverage/**": true
  },
  "search.smartCase": true,
  // Notebook settings
  "notebook.cellToolbarLocation": {
    "default": "right"
  },
  // Terminal settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.terminal.toggleTerminal",
    "workbench.action.focusActiveEditorGroup",
    "workbench.action.focusNextGroup",
    "workbench.action.focusPreviousGroup",
    "workbench.action.quickOpen"
  ],
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.splitCwd": "workspaceRoot",
  "terminal.integrated.scrollback": 1000,
  "diffEditor.renderSideBySide": true,
  "accessibility.signals.terminalBell": {
    "sound": "off"
  },
  // Debug settings
  "debug.openDebug": "openOnFirstSessionStart",
  // Security
  "security.workspace.trust.enabled": true,
  "debug.console.wordWrap": true,
  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": false,
  "git.openRepositoryInParentFolders": "always",
  "git.pruneOnFetch": true,
  "git.mergeEditor": true,
  "git.pullTags": true,
  "scm.alwaysShowRepositories": true,
  // Problems view
  "problems.autoReveal": false,
  // SCM settings
  "scm.diffDecorations": "all",
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "task.problemMatchers.neverPrompt": true,
  // Extensions
  "extensions.autoUpdate": true,
  // Language specific settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ========================================
  // Neovim Integration Settings
  // ========================================
  // WSL環境でのNeovimパス設定
  "vscode-neovim.neovimExecutablePaths.wsl": "/home/miki/.local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.wsl": "~/.config/nvim/init.lua",

  // Linuxネイティブ環境用のフォールバック
  "vscode-neovim.neovimExecutablePaths.linux": "/home/miki/.local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",

  "vscode-neovim.useCtrlKeysForNormalMode": true,
  "vscode-neovim.useCtrlKeysForInsertMode": false,
  "vscode-neovim.ctrlKeysForNormalMode": [
    "d",
    "u",
    "f",
    "b",
    "o"
  ],
  "vscode-neovim.ctrlKeysForInsertMode": [
    "a",
    "c",
    "v",
    "x",
    "z"
  ],
  // Vim-friendly editor settings
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 8,
  "workbench.list.automaticKeyboardNavigation": false,
  "editor.find.seedSearchStringFromSelection": "never"
}
